{
    "version": 2,
    "name": "video-parser",
    "builds": [
        {
            "src": "index.py",
            "use": "@vercel/python"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/",
            "dest": "/public/index.html"
        },
        {
            "src": "/parse",
            "methods": ["POST", "OPTIONS"],
            "dest": "/index.py"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        }
    ],
    "env": {
        "FLASK_APP": "index.py",
        "FLASK_ENV": "production",
        "PORT": "5000",
        "HOST": "0.0.0.0"
    }
} 
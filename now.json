{
    "version": 2,
    "name": "video-parser",
    "builds": [
        {
            "src": "*.py",
            "use": "@now/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/index.py"
        }
    ],
    "env": {
        "FLASK_APP": "index.py",
        "FLASK_ENV": "production",
        "PORT": "5000",
        "HOST": "0.0.0.0"
    }
} 